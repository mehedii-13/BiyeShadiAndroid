<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiyeShadi"
        tools:targetApi="31">

        <!-- Splash/Login Activity - Main Entry Point -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Create Account Activity -->
        <activity
            android:name=".ui.CreateAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Dashboard Activity -->
        <activity
            android:name=".ui.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- Biodata Form Activity -->
        <activity
            android:name=".ui.BiodataFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Search Matches Activity -->
        <activity
            android:name=".ui.SearchMatchesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- View Profile Activity -->
        <activity
            android:name=".ui.ViewProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- Shortlist Activity -->
        <activity
            android:name=".ui.ShortlistActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- Contact Requests Activity -->
        <activity
            android:name=".ui.ContactRequestsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- Connected People Activity -->
        <activity
            android:name=".ui.ConnectedPeopleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- My Profile Activity -->
        <activity
            android:name=".ui.MyProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- Requests Sent Activity -->
        <activity
            android:name=".ui.RequestsSentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar" />

        <!-- Edit Profile Activity -->
        <activity
            android:name=".ui.EditProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BiyeShadi.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>
