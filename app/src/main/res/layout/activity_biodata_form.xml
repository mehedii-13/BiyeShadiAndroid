<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_red"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Personal Information"
                android:textColor="@color/primary_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Date of Birth -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/dateOfBirthField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="DD/MM/YYYY"
                        android:paddingHorizontal="12dp" />

                    <!-- Age -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ageField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter age"
                        android:inputType="number"
                        android:paddingHorizontal="12dp" />

                    <!-- Height -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/heightSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <!-- Weight -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight (kg)"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/weightField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter weight"
                        android:paddingHorizontal="12dp" />

                    <!-- Marital Status -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marital Status"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/maritalStatusSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <!-- Religion -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Religion"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/religionSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <!-- Caste -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caste"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/casteField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter caste"
                        android:paddingHorizontal="12dp" />

                    <!-- Mother Tongue -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother Tongue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/motherTongueField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter mother tongue"
                        android:paddingHorizontal="12dp" />

                    <!-- Complexion -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complexion"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/complexionSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <!-- Blood Group -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/bloodGroupSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_field" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Education & Career Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Education and Career"
                android:textColor="@color/primary_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/educationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Occupation"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/occupationField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter occupation"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Annual Income"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/incomeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/companyField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter company name"
                        android:paddingHorizontal="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Family Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Family Details"
                android:textColor="@color/primary_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father's Name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/fatherNameField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter father's name"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father's Occupation"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/fatherOccupationField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter father's occupation"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother's Name"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/motherNameField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter mother's name"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother's Occupation"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/motherOccupationField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter mother's occupation"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siblings"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/siblingsField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="e.g., 1 Brother, 2 Sisters"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Type"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/familyTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Status"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/familyStatusSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_field" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Location"
                android:textColor="@color/primary_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/addressField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter address"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/cityField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter city"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State/Division"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/stateField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter state/division"
                        android:paddingHorizontal="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/countryField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter country"
                        android:textColor="#000000"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="12dp"
                        android:text="Bangladesh" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- About Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="About Me"
                android:textColor="@color/primary_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Me"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/aboutMeField"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field"
                        android:gravity="top"
                        android:hint="Write something about yourself..."
                        android:inputType="textMultiLine"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hobbies"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/hobbiesField"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_input_field"
                        android:hint="Enter your hobbies"
                        android:paddingHorizontal="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Partner Preferences Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Partner Preferences"
                android:textColor="@color/primary_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partner Age Range"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/partnerAgeFromField"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_field"
                            android:hint="From"
                            android:inputType="number"
                            android:paddingHorizontal="12dp" />

                        <EditText
                            android:id="@+id/partnerAgeToField"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_field"
                            android:hint="To"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:textColorHint="#757575"
                            android:paddingHorizontal="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partner Religion"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/partnerReligionSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partner Education"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/partnerEducationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partner Marital Status"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/partnerMaritalStatusSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_field" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partner Expectations"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/partnerExpectationsField"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_input_field"
                        android:gravity="top"
                        android:hint="Describe your expectations..."
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textColorHint="@color/text_hint"
                        android:padding="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button_primary"
                android:text="Save Biodata"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
